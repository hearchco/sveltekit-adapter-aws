{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": ".",
    "noImplicitAny": true,
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}
